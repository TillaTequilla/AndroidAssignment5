<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/alabaster</item>
        <item name="colorOnSurface">@color/alabaster</item>
        <item name="colorError">@color/contacts_contacts</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayoutForAddContact" parent="">
        <item name="colorPrimary">#888888</item>
        <item name="colorOnSurface">#888888</item>
        <item name="colorError">@color/contacts_contacts</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MineCustomTabText" parent="Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="tabBackground">@color/profile_background</item>
        <item name="tabRippleColor">@color/contacts_contacts</item>
        <item name="tabSelectedTextColor">@color/contacts_contacts</item>
        <item name="tabIndicatorColor">@color/contacts_contacts</item>
        <item name="tabTextColor">@color/white</item>
    </style>


</resources>